{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/tests/**/**.jsx", "**/*.test.jsx"]}],
        "react/no-array-index-key": 0,
        "no-loop-func": 0
    },
    "overrides": [
        {
            "files": [
            "**/*.test.js",
            "**/*.test.jsx"
            ],
            "env": {
            "jest": true
            }
        }
    ]
}
